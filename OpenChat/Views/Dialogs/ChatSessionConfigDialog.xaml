<Window x:Class="OpenChat.Views.Dialogs.ChatSessionConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:converters="clr-namespace:OpenChat.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:OpenChat.Views.Dialogs"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mybehaviors="clr-namespace:OpenChat.Behaviors"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        Title="ChatSessionConfigDialog"
        Width="400"
        Height="550"
        d:DataContext="{d:DesignInstance Type=local:ChatSessionConfigDialog}"
        Background="{DynamicResource GeneralBackground}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">
    <behaviors:Interaction.Behaviors>
        <mybehaviors:WindowStyleManagerBehavior />
    </behaviors:Interaction.Behaviors>

    <Grid>
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center">
                            <Run Text="{DynamicResource StrEnableChatContext}" />
                            <Run Text=":" />
                        </TextBlock>

                        <ComboBox Name="enableChatContextComboBox" Grid.Column="1" VerticalAlignment="Center"
                                  SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem Content="{DynamicResource StrAuto}" Tag="{x:Null}" />

                            <ComboBoxItem Content="{DynamicResource StrYes}">
                                <ComboBoxItem.Tag>
                                    <s:Boolean>True</s:Boolean>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>

                            <ComboBoxItem Content="{DynamicResource StrNo}">
                                <ComboBoxItem.Tag>
                                    <s:Boolean>False</s:Boolean>
                                </ComboBoxItem.Tag>
                            </ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <StackPanel Margin="0,5">
                        <Grid>
                            <TextBlock Margin="0,0,0,5">
                                <Run Text="{DynamicResource StrSystemMessages}" />
                                <Run Text=":" />
                            </TextBlock>

                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button Padding="3,0" BorderThickness="0"
                                        Command="{Binding RemoveSystemMessageCommand}"
                                        Content=" - " ToolTip="Remove a system message" />
                                <Button Margin="5,0,0,0" Padding="3,0" BorderThickness="0"
                                        Command="{Binding AddSystemMessageCommand}"
                                        Content=" + " ToolTip="Add a system message" />
                            </StackPanel>
                        </Grid>
                        <Border MinHeight="10" Padding="5"
                                BorderBrush="{DynamicResource BoxBorder}"
                                BorderThickness="1">
                            <ItemsControl ItemsSource="{Binding Session.SystemMessages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBox Margin="0,1" Padding="5,3" AcceptsReturn="True"
                                                 Text="{Binding Value}"
                                                 TextWrapping="Wrap" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <Button MinWidth="50" Margin="20,10" Padding="10,5"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Command="{Binding AcceptCommand}"
                    Content="{DynamicResource StrOk}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
